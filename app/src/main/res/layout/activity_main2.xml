<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".Main2Activity">

    <ImageView
        android:id="@+id/backthree"
        android:layout_width="110dp"
        android:layout_height="78dp"
        android:background="@drawable/border_24dp"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back"
        tools:ignore="VectorDrawableCompat" />

    <ImageView
        android:id="@+id/reloadit"
        android:layout_width="139dp"
        android:layout_height="147dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/border_24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/press_me"
        app:srcCompat="@drawable/reload" />

    <TextView
        android:id="@+id/main_title"
        android:layout_width="331dp"
        android:layout_height="121dp"
        android:layout_marginTop="90dp"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ot"
        android:layout_width="308dp"
        android:layout_height="150dp"
        android:scaleType="fitXY"
        android:scaleX="-1"
        app:layout_constraintBottom_toBottomOf="@+id/winlose"
        app:layout_constraintEnd_toEndOf="@+id/winlose"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/winlose"
        app:layout_constraintTop_toTopOf="@+id/winlose"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/ot" />

    <TextView
        android:id="@+id/winlose"
        android:layout_width="308dp"
        android:layout_height="150dp"
        android:layout_marginTop="28dp"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_title" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="283dp"
        android:layout_height="48dp"
        android:layout_marginTop="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/winlose" />

    <TextView
        android:id="@+id/press_me"
        android:layout_width="275dp"
        android:layout_height="116dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/border_24dp"
        android:gravity="center"
        android:text="Press Me!"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/progressBar" />

    <TextView
        android:id="@+id/vthree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        tools:layout_editor_absoluteX="340dp"
        tools:layout_editor_absoluteY="714dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".Main4Activity">

    <TextView
        android:id="@+id/gold"
        android:layout_width="117dp"
        android:layout_height="30dp"
        android:layout_marginStart="300dp"
        android:layout_marginLeft="300dp"
        android:background="@drawable/border_24dp"
        android:gravity="center"
        android:text="Gold:0"
        android:textColor="#000000"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/monster"
        android:layout_width="367dp"
        android:layout_height="248dp"
        android:layout_marginTop="30dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/placeholder" />

    <ProgressBar
        android:id="@+id/monster_health"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="350dp"
        android:layout_height="33dp"
        android:theme="@style/Health"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/monster_health_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.524"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/monster_health_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="400dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/easy"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginBottom="200dp"
        android:background="@drawable/border_24dp"
        android:gravity="center"
        android:text="Easy"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/medium"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginBottom="200dp"
        android:background="@drawable/border_24dp"
        android:gravity="center"
        android:text="Medium"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/easy" />

    <TextView
        android:id="@+id/hard"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginBottom="200dp"
        android:background="@drawable/border_24dp"
        android:gravity="center"
        android:text="Hard"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/medium" />

    <TextView
        android:id="@+id/hammer"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginBottom="100dp"
        android:background="@drawable/border_24dp"
        android:gravity="center"
        android:text="Hammer"
        android:textColor="#000000"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/dagger"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginBottom="100dp"
        android:background="@drawable/border_24dp"
        android:gravity="center"
        android:text="Dagger"
        android:textColor="#000000"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/hammer" />

    <TextView
        android:id="@+id/sword"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginBottom="100dp"
        android:background="@drawable/border_24dp"
        android:gravity="center"
        android:text="Sword"
        android:textColor="#000000"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/dagger" />

    <ImageView
        android:id="@+id/dagger_image"
        android:layout_width="90dp"
        android:layout_height="150dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginBottom="135dp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/dagger"
        app:layout_constraintStart_toEndOf="@+id/hammer_image"
        app:srcCompat="@drawable/dagger" />

    <ImageView
        android:id="@+id/hammer_image"
        android:layout_width="90dp"
        android:layout_height="150dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginBottom="135dp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/hammer"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/hammer" />

    <ImageView
        android:id="@+id/sword_image"
        android:layout_width="90dp"
        android:layout_height="150dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginBottom="136dp"
        android:rotation="270"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/sword"
        app:layout_constraintStart_toEndOf="@+id/dagger_image"
        app:srcCompat="@drawable/sword" />

    <TextView
        android:id="@+id/start"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:background="@drawable/border_24dp"
        android:gravity="center"
        android:text="Start"
        android:textColor="#000000"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.653" />

    <TextView
        android:id="@+id/attack"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_marginTop="164dp"
        android:background="@drawable/border_24dp"
        android:gravity="center"
        android:text="Attack!"
        android:textColor="#000000"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/action" />

    <TextView
        android:id="@+id/action"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginTop="21dp"
        android:gravity="center"
        android:textColor="#000000"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hitmiss" />

    <TextView
        android:id="@+id/outcome"
        android:layout_width="367dp"
        android:layout_height="248dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="80sp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/hitmiss"
        android:layout_width="207dp"
        android:layout_height="34dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:textColor="#000000"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/monster_health" />

    <TextView
        android:id="@+id/reload"
        android:layout_width="206dp"
        android:layout_height="53dp"
        android:layout_marginBottom="64dp"
        android:background="@drawable/border_24dp"
        android:gravity="center"
        android:text="Next"
        android:textColor="#000000"
        android:textSize="24sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />

    <ProgressBar
        android:id="@+id/player_health"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="350dp"
        android:layout_height="33dp"
        android:layout_marginTop="208dp"
        android:theme="@style/Health"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/monster_health" />

    <TextView
        android:id="@+id/player_health_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:textColor="#000000"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/player_health" />

    <TextView
        android:id="@+id/player_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="14dp"
        android:gravity="center"
        android:text="Player"
        android:textColor="#000000"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/player_health"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/vfive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        tools:layout_editor_absoluteX="355dp"
        tools:layout_editor_absoluteY="710dp" />

    <TextView
        android:id="@+id/tryagain"
        android:layout_width="206dp"
        android:layout_height="53dp"
        android:layout_marginBottom="64dp"
        android:background="@drawable/border_24dp"
        android:gravity="center"
        android:text="Try Again?"
        android:textColor="#000000"
        android:textSize="24sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/backfive"
        android:layout_width="110dp"
        android:layout_height="78dp"
        android:background="@drawable/border_24dp"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back"
        tools:ignore="VectorDrawableCompat" />

</androidx.constraintlayout.widget.ConstraintLayout>